<tr id= "question_group_<%= question_group.id %>">
  <td>
    <% if can_administer? %>
      <%= link_to question_group.name, question_group_questions_path(question_group) %>
    <% else %>
      <%= question_group.name %>
    <% end %>
  </td>
  <td>
    <ul class="horizontal-list">
      <li><%= link_to "Responder Actividad", new_question_group_answer_group_path(question_group) %></li>
      <% if can_administer? %>
        <li><%= link_to "Entrega de estudiantes", [:results, question_group] %></li>
        <li><%= link_to "Eliminar", [question_group], method: :delete %></li>
      <% end %>
    </ul>
  </td>
</tr>
